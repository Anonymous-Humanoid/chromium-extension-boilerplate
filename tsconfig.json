{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            // General JS
            "ESNext",

            // Web interfaces
            "DOM",
            "DOM.Iterable",

            // Asynchronicity and promises
            "ES2020.Promise",
            "ESNext.asynciterable"
        ],
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": false,
        "jsx": "react",
        "typeRoots": ["./node_modules/@types"],
        "outDir": "./build"
    },
    "include": ["**/*"],
    "exclude": ["**/build", "**/dist", "**/node_modules", "./zip"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
