{
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "typescript.tsdk": "./node_modules/typescript/lib",
    "prettier.configPath": "./config/prettier/prettier.config.mjs",
    "prettier.ignorePath": "./config/prettier/.prettierignore",
    "markdownlint.configFile": "./config/markdownlint/.markdownlint-cli2.jsonc",
    "eslint.useFlatConfig": true,
    "eslint.workingDirectories": ["."],
    "eslint.options": {
        "overrideConfigFile": "config/eslint/eslint.config.mjs" // Absolute
    },
    "search.exclude": {
        "**/dist": true,
        "**/build": true,
        "**/coverage": true,
        "**/*.bundle.*": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/package-lock.json": true
    }
}
